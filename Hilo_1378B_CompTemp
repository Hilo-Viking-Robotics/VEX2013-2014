void pre_auton()
{
	bStopTasksBetweenModes = true;

 SensorValue(lift) = 0;
}

/////////////////////////////////////////////////////////////////////////////////////////
//
//                                 Autonomous Task
//
// This task is used to control your robot during the autonomous phase of a VEX Competition.
// You must modify the code to add your own robot specific commands here.
//
/////////////////////////////////////////////////////////////////////////////////////////

task autonomous()
{
	StartTask(ArmControl);
	while(true)
	{
		if( ( SensorValue[AutoControl] < 1300 ) 
		{
			AutoRedZero();
		}


		else if( ( SensorValue[AutoControl] > 1300 ) && ( SensorValue[AutoControl] < 2700 ) ) 
		{
			AutoMid();
		}

		else if( SensorValue[AutoControl] > 2700 ) 
		{
			AutoBlueZero();
		}

		else
		{
			AutoAuto();
		}
	}
}	






/////////////////////////////////////////////////////////////////////////////////////////
//
//                                 User Control Task
//
// This task is used to control your robot during the user control phase of a VEX Competition.
// You must modify the code to add your own robot specific commands here.
//
/////////////////////////////////////////////////////////////////////////////////////////

task usercontrol()
{
	armHeight = 0;
	StartTask(ArmControl);
	while( true )
	{

		wait1Msec(25);
		motor[driveLMid] = vexRT[Ch3];
		motor[driveLBack] = vexRT[Ch3];

		motor[driveRMid] = vexRT[Ch2];
		motor[driveRBack] = vexRT[Ch2];

		if( vexRT( Btn5U ) )
		{
			motor[liftLOut] = 127;
			motor[liftLIn] = 127;
			motor[liftROut] = 127;
			motor[liftRIn] = 127;
		}
		else if( vexRT( Btn5D ) )
		{
			motor[liftLOut] = -127;
			motor[liftLIn] = -127;
			motor[liftROut] = -127;
			motor[liftRIn] = -127;
		}
		else
		{
			motor[liftLOut] = 0;
			motor[liftLIn] = 0;
			motor[liftROut] = 0;
			motor[liftRIn] = 0;
		}

		if( vexRT( Btn6U ) )
		{
			motor[intakeL] = 127;
			motor[intakeR] = 127;
		}
		else if( vexRT( Btn6D ) )
		{
			motor[intakeL] = -127;
			motor[intakeR] = -127;
		}
		else
		{
			motor[intakeL] = 0;
			motor[intakeR] = 0;
		}
		/*
		if( vexRT[Btn8U] )
		{
			StartTask(armControl);
		}
		else if( vexRT[Btn8D] )
		{
			StopTask(armControl);
		}
*/
		wait1Msec(5);
	}

}
