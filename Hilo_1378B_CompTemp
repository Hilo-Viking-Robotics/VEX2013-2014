#pragma config(I2C_Usage, I2C1, i2cSensors)
#pragma config(Sensor, in1,    autoControl,    sensorPotentiometer)
#pragma config(Sensor, I2C_1,  drive,          sensorQuadEncoderOnI2CPort,    , AutoAssign)
#pragma config(Sensor, I2C_2,  lift,           sensorQuadEncoderOnI2CPort,    , AutoAssign)
#pragma config(Motor,  port1,           driveRBack,    tmotorVex393, PIDControl, reversed, encoder, encoderPort, I2C_1, 1000)
#pragma config(Motor,  port2,           driveRMid,     tmotorVex393, openLoop, reversed)
#pragma config(Motor,  port3,           liftLIn,       tmotorVex393, openLoop)
#pragma config(Motor,  port4,           liftLOut,      tmotorVex393, openLoop)
#pragma config(Motor,  port5,           intakeL,       tmotorVex393, openLoop, reversed)
#pragma config(Motor,  port6,           intakeR,       tmotorVex393, openLoop)
#pragma config(Motor,  port7,           liftROut,      tmotorVex393, PIDControl, encoder, encoderPort, I2C_2, 1000)
#pragma config(Motor,  port8,           liftRIn,       tmotorVex393, openLoop, reversed)
#pragma config(Motor,  port9,           driveLMid,     tmotorVex393, openLoop)
#pragma config(Motor,  port10,          driveLBack,    tmotorVex393, openLoop, reversed)
