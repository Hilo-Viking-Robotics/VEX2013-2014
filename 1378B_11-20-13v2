void AutoBlueHang()
{
	SensorValue(liftL) = 0;
	SensorValue(driveLeft) = 0;

	motor[intakeL] = 127;
	motor[intakeR] = 127;

	Move( 80, 300 );
	wait1Msec(700);
	Move( 70, 220 );
	wait1Msec(700);
	Move(-70, 80 );
	wait1Msec(500);

	motor[intakeL] = 0;
	motor[intakeR] = 0;
	wait1Msec(300);
	PointTurn( 80, -80, 280);

	Move( 127, 600 );
	wait1Msec(500);

	PointTurn( 80, -80, 280 );

	armHeight = 100;

	Move( 100, 300 );
	wait1Msec(200);
	Move( 127, 1000 );

	wait1Msec(300);
	PointTurn( -80, 80, 100 );
	wait1Msec(300);
	armHeight = 0;
	wait1Msec(200);
	Move( 127, 1000);

	motor[intakeL] = -127;
	motor[intakeR] = -127;

	wait1Msec(5000);

	motor[intakeL] = 0;
	motor[intakeR] = 0;

}

