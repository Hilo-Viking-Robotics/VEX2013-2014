/////////////////////////////////////////////////////////////////////////////////////////
//
//                                 Autonomous Task
//
// This task is used to control your robot during the autonomous phase of a VEX Competition.
// You must modify the code to add your own robot specific commands here.
//
/////////////////////////////////////////////////////////////////////////////////////////

task autonomous()
{
	motor[liftL] = 127;
	motor[liftLin] = 127;
	motor[liftR] = 127;
	motor[liftRin] = 127;
	wait1Msec(600);
	motor[liftL] = 0;
	motor[liftLin] = 0;
	motor[liftR] = 0;
	motor[liftRin] = 0;
	motor[driveLMid] = 127;
	motor[driveLBack] = 127;
	motor[driveRBack] = 127;
	motor[driveRMid] = 127;
	wait1Msec(725);
	motor[driveLMid] = 0;
	motor[driveLBack] = 0;
	motor[driveRBack] = 0;
	motor[driveRMid] = 0;
	wait1Msec(300);
	motor[driveLMid] = -127;
	motor[driveLBack] = -127;
	motor[driveRBack] = -127;
	motor[driveRMid] = -127;
	wait1Msec(725);
	motor[driveLMid] = 0;
	motor[driveLBack] = 0;
	motor[driveRBack] = 0;
	motor[driveRMid] = 0;
	wait1Msec(2000);
	motor[driveLMid] = 127;
	motor[driveLBack] = 127;
	motor[driveRBack] = 127;
	motor[driveRMid] = 127;
	wait1Msec(800);
	motor[driveLMid] = 0;
	motor[driveLBack] = 0;
	motor[driveRBack] = 0;
	motor[driveRMid] = 0;
	motor[intakeL] = -127;
	motor[intakeR] = -127;
	wait1Msec(2000);
	motor[driveLMid] = -127;
	motor[driveLBack] = -127;
	motor[driveRBack] = -127;
	motor[driveRMid] = -127;
	wait1Msec(725);
	motor[driveLMid] = 0;
	motor[driveLBack] = 0;
	motor[driveRBack] = 0;
	motor[driveRMid] = 0;
	motor[intakeL] = 0;
	motor[intakeR] = 0;
}


/////////////////////////////////////////////////////////////////////////////////////////
//
//                                 User Control Task
//
// This task is used to control your robot during the user control phase of a VEX Competition.
// You must modify the code to add your own robot specific commands here.
//
/////////////////////////////////////////////////////////////////////////////////////////

task usercontrol()
{
	armHeight = 0;
	StartTask(ArmControl);
	while( true )
	{
		wait1Msec(25);

		motor[driveLMid] = vexRT[Ch3];
		motor[driveLBack] = vexRT[Ch3];


		motor[driveRMid] = vexRT[Ch2];
		motor[driveRBack] = vexRT[Ch2];

		if( vexRT( Btn6U ) )
		{
			motor[liftL] = 127;
			motor[liftLin] = 127;
			motor[liftR] = 127;
			motor[liftRin] = 127;
		}
		else if( vexRT( Btn6D ) )
		{
			motor[liftL] = -127;
			motor[liftLin] = -127;
			motor[liftR] = -127;
			motor[liftRin] = -127;

		}
		else
		{
			motor[liftL] = 0;
			motor[liftLin] = 0;
			motor[liftR] = 0;
			motor[liftRin] = 0;
		}

		if( vexRT( Btn5U ) )
		{
			motor[intakeL] = 127;
			motor[intakeR] = 127;
		}
		else if( vexRT( Btn5D ) )
		{
			motor[intakeL] = -127;
			motor[intakeR] = -127;
		}
		else
		{
			motor[intakeL] = 0;
			motor[intakeR] = 0;
		}
		wait1Msec(5);
	}
}
