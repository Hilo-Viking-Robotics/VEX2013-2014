/////////////////////////////////////////////////////////////////////////////////////////
//
//                                 User Control Task
//
// This task is used to control your robot during the user control phase of a VEX Competition.
// You must modify the code to add your own robot specific commands here.
//
/////////////////////////////////////////////////////////////////////////////////////////

task usercontrol()
	{
	 armHeight = 0;
	StartTask(ArmControl);
	while( true )
	{

		wait1Msec(25);

		motor[motormiddleleft] = vexRT[Ch3];
		motor[motorbackleft] = vexRT[Ch3];


		motor[motormiddleright] = vexRT[Ch2];
		motor[motorbackright] = vexRT[Ch2];

		if( vexRT( Btn6U ) )
		{
			motor[liftoutL] = 127;
			motor[liftMidL] = 127;
			motor[liftMidr] = 127;
			motor[liftOutR] = 127;
		}
		else if( vexRT( Btn6D ) )
		{
			motor[liftoutL] = -127;
			motor[liftMidL] = -127;
			motor[liftMidr] = -127;
			motor[liftOutR] = -127;
		}
		else
		{
			motor[liftoutL] = 0;
			motor[liftMidL] = 0;
			motor[liftMidr] = 0;
			motor[liftOutR] = 0;
		}

		if( vexRT( Btn5U ) )
		{
			motor[intakeL] = 127;
			motor[intakeR] = 127;
		}
		else if( vexRT( Btn5D ) )
		{
			motor[intakeL] = -127;
			motor[intakeR] = -127;
		}
		else
		{
			motor[intakeL] = 0;
			motor[intakeR] = 0;
		}
		wait1Msec(5);
	}
}
